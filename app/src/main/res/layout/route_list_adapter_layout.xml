<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:weightSum="35"
    >

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_weight="15"
        android:text="textViewName"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/textViewGrade"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_weight="5"
        android:text="textViewGrade"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/textViewUserGrade"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_weight="5"
        android:text="textViewUserGrade"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/textViewRouteTime"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_weight="5"
        android:text="textViewRouteTime"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/textViewPitchNumber"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_weight="5"
        android:gravity="center"
        android:text="textViewPitchNumber"
        android:textAlignment="center" />

</LinearLayout>